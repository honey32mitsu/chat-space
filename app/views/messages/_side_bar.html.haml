.chat-side
  .user-name
    .top-items
      .name 
        = current_user.name
      .top-items__icons
        = link_to new_group_path ,class:"top-items__icons top-items__icons__left-icon"do
          =icon('far','edit',class:'top-items__icons--left-icon')
          %span<>
        =link_to edit_user_path(current_user.id),class:"top-items__icons top-items__icons__right-icon"do
          =icon('fas','cog',class:'top-items__icons--right-icon')
          %span<>
  .group-items
    - current_user.groups.each do |group|
      .group-box
        = link_to group_messages_path(group) do
          .group-name
            =group.name
          .message-box
            .group-message
              = group.message
  .group-list