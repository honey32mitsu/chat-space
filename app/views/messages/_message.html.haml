.messages
  .tweet-tag
    .tweet-name
      = message.user.name
    .tweet-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .text
    - if message.content.present?
      %p.text__content
        = message.content
    = image_tag message.image.url, class: 'text__image' if message.image.present?